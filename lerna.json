{
  "lerna": "3.4.0",
  "version": "3.0.0",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish %s",
      "allowBranch": "master",
      "npmClient": "npm",
      "forcePublish": "*"
    }
  }
}
