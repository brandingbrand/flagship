    class="max-w-md mt-4 px-4 lg:py-20 mx-auto xl:max-w-7xl lg:px-8 sm:max-w-2xl sm:px-6 md:max-w-3xl lg:max-w-4xl 2xl:max-w-6xl mb-6 flex flex-col items-center w-full gap-6"
