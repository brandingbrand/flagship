<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="<%- android.packageName %>">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:theme="@style/AppTheme"
      <% Object.entries(android.manifest?.applicationAttributes ?? {})?.forEach(function([k, v]) { %>
      <%- k %>="<%- v %>"
      <% }) %>
      >
      <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:exported="true"
        <% Object.entries(android.manifest?.activityAttributes ?? {})?.forEach(function([k, v]) { %>
        <%- k %>="<%- v %>"
        <% }) %>
        >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

        <% if(android.manifest?.urlScheme) { %>
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
            <data android:scheme="<%- android.manifest.urlScheme.scheme %>" android:host="<%- android.manifest.urlScheme.host || "" %>"/>
        </intent-filter>
        <% } %>

        <% android.manifest?.mainActivityElements?.forEach(function(it) { %>
        <%- it %>
        <% }) %>
      </activity>

      <% android.manifest?.applicationElements?.forEach(function(it) { %>
      <%- it %>
      <% }) %>
    </application>
</manifest>
