{
  "name": "@brandingbrand/code",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "private": true,
  "author": "",
  "keywords": [],
  "main": "index.js",
  "workspaces": {
    "packages": [
      "docs",
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/react",
      "**/react-native",
      "**/react-native-*"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "build:docs": "turbo run build --filter='./docs'",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev --concurrency 100",
    "dev:docs": "turbo run dev --filter='./docs' --concurrency 100",
    "dev:packages": "turbo run dev --filter='./packages/*' --concurrency 100",
    "prepare": "husky install",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,yml}": [
      "prettier --write"
    ],
    "package.json": [
      "format-package -w"
    ]
  },
  "eslintConfig": {
    "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "prettier",
      "@typescript-eslint"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ],
      "no-var": "off",
      "no-undef": "off",
      "no-control-regex": "off",
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-control-regex": "off",
      "@typescript-eslint/no-empty-function": "off"
    },
    "ignorePatterns": [
      "**/dist/**"
    ],
    "parser": "@typescript-eslint/parser"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "./packages/core/test/environment/custom-env.ts",
    "setupFilesAfterEnv": [
      "./packages/core/test/environment/setup-files-after-env.ts"
    ]
  },
  "resolutions": {
    "metro-config": "0.72.3",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-native": "0.70.6",
    "react-native-device-info": "^10.3.0",
    "react-native-navigation": "^7.30.2",
    "xcode": "^3.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@jest/environment": "^29.4.3",
    "@jest/types": "^29.4.3",
    "@tsconfig/node16": "^1.0.3",
    "@tsconfig/react-native": "^2.0.3",
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.12",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "format-package": "^7.0.0",
    "husky": "^8.0.0",
    "jest": "^29.4.3",
    "jest-environment-node": "^29.4.3",
    "lint-staged": "^13.2.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "turbo": "^1.8.5",
    "typescript": "^4.8.4"
  }
}
